<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_one"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="#f20"
        android:gravity="center"
        android:text="1"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_two"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_above="@id/text_view_one"
        android:layout_toStartOf="@id/text_view_one"
        android:background="#2A9443"
        android:gravity="center"
        android:text="2"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_three"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@id/text_view_one"
        android:layout_toStartOf="@id/text_view_one"
        android:background="#B6AA31"
        android:gravity="center"
        android:text="3"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_four"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_above="@id/text_view_one"
        android:layout_toEndOf="@id/text_view_one"
        android:background="#95166D"
        android:gravity="center"
        android:text="4"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_five"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@id/text_view_one"
        android:layout_toEndOf="@id/text_view_one"
        android:background="#8D635C"
        android:gravity="center"
        android:text="5"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_six"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="#936A30"
        android:gravity="center"
        android:text="6"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_seven"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="#47D9AD"
        android:gravity="center"
        android:text="7"
        android:layout_alignParentEnd="true"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_eight"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="#224D81"
        android:gravity="center"
        android:text="8"
        android:layout_alignParentBottom="true"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_view_nine"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:background="#EA982B"
        android:gravity="center"
        android:text="9"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textSize="40sp" />
</RelativeLayout>